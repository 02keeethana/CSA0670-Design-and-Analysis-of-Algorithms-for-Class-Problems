#include<stdio.h>
int main()
{
	int i, n,rem,sum=0;
	printf("Enter the number: ");
	scanf("%d",&n);
	for(i=1;i<n;i++)
	{
	    rem=n % i;
	    if(rem==0)
	    {
	    	sum=sum+i;
	    }
	}
	if(sum==n)
	     printf(" %d is a Perfect number",n);
    else
       printf(" %d is not a perfect number",n);
 return 0;
}
